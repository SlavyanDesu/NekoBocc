{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/cjs",
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./test"]
}